@model IEnumerable<ProyectoFinal1_desaAppsWeb.Models.USUARIO>

@{
    ViewData["Title"] = "descargas";
}

@Html.Raw(TempData["msg"])

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,300,400,500,700,900" rel="stylesheet">

    <title>E-Descargas</title>
    <!--
    SOFTY PINKO
    https://templatemo.com/tm-535-softy-pinko
    -->
    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/font-awesome.css">

    <link rel="stylesheet" href="~/css/templatemo-softy-pinko.css">

</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="logo">
                            <img src="https://i.imgur.com/ugCorAW.png" alt="E-Descargas" />
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="AppCliente" asp-action="busqueda">Búsqueda</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="AppCliente" asp-action="descargas">Descargas</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="AppCliente" asp-action="proximamente">Compras</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="AppAdmin" asp-action="admin">Admin</a></li>
                            <li class="nav-item"><a asp-area="" asp-controller="USUARIO" asp-action="signIn">Salir</a></li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <!-- ***** Blog Start ***** -->
    <section class="section" id="blog">
        <div class="container">
            <!-- ***** Section Title Start ***** -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="center-heading">
                        <h2 class="section-title"><br>Pre-visualización de descargas</h2>
                    </div>
                </div>
                <div class="offset-lg-3 col-lg-6">
                    <div class="center-text">
                        <p>Mira la pre-visualización de tus descargas</p>
                    </div>
                </div>
            </div>
            <!-- ***** Section Title End ***** -->

            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="blog-post-thumb">
                        <div class="img">
                            <img src="~/images/laSirenita.jpg" alt="">
                        </div>
                        <div class="blog-content">
                            <h3>
                                <a href="#">La Sirenita</a>
                            </h3>
                            <div class="text">
                                La sirena Ariel está fascinada por el mundo de los humanos, pero su padre le prohíbe relacionarse con ellos. En un viaje secreto, se enamora de un humano y recurre a una perversa hechicera para que, mediante un conjuro, su amor triunfe.
                            </div>
                            <a asp-area="" asp-controller="AppCliente" asp-action="busquedaPeliculas" class="main-button">Ver más</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="blog-post-thumb">
                        <div class="img">
                            <img src="~/images/mujercitas.jpg" alt="">
                        </div>
                        <div class="blog-content">
                            <h3>
                                <a href="#">Mujercitas</a>
                            </h3>
                            <div class="text">
                                Mujercitas es una novela de la escritora estadounidense Louisa May Alcott publicada el 30 de septiembre de 1868, que trata la vida de cuatro niñas que, tras pasar la adolescencia con la Guerra Civil en los Estados Unidos como fondo, entre 1861 y 1865, se convierten en mujeres.
                            </div>
                            <a asp-area="" asp-controller="AppCliente" asp-action="busquedaLibros" class="main-button">Ver más</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="blog-post-thumb">
                        <div class="img">
                            <img src="~/images/futureNostalgia.jpg" alt="">
                        </div>
                        <div class="blog-content">
                            <h3>
                                <a href="#">Future Nostalgia</a>
                            </h3>
                            <div class="text">
                                Future Nostalgia es el segundo álbum de estudio de la cantante británica Dua Lipa.​​ Fue lanzado el 27 de marzo de 2020 por el sello discográfico Warner Records.
                            </div>
                            <a asp-area="" asp-controller="AppCliente" asp-action="busquedaMusica" class="main-button">Ver más</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Blog End ***** -->
    <!-- ***** Footer Start ***** -->
 

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="~/js/scrollreveal.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/imgfix.min.js"></script>

    <!-- Global Init -->
    <script src="~/js/custom.js"></script>

</body>
</html>