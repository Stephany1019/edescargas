@model ProyectoFinal1_desaAppsWeb.Models.USUARIO

@{
    ViewData["Title"] = "signIn";
}

@Html.Raw(TempData["msg"])

<head>
    <link rel="stylesheet" href="~/css/styleSignIn.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,300,400,500,700,900" rel="stylesheet">
</head>
<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form asp-action="CreateUser" asp-controller="USUARIO">
            <h1>Crea una cuenta</h1>
            <input type="text" id="nombreRegistrarse" asp-for="Usuario" placeholder="Nombre completo" />
            <input type="email" id="emailRegistrarse" asp-for="Email" placeholder="Correo Electrónico" />
            <input type="password" id="passwordIngresar1" asp-for="Contrasena" placeholder="Contraseña" />
            <input type="text" id="Pregunta" asp-for="Pregunta_seguridad" placeholder="¿Cómo se llamó su primer mascota?" readonly />
            <input type="text" id="Respuesta" asp-for="Respuesta_seguridad" placeholder="Respuesta de seguridad" />
            <button type="submit" value="CreateUser">Registrarse</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form asp-action="logIn" asp-controller="USUARIO">
            <h1>Ingresa con tu cuenta</h1>
            <input type="email" id="emailIngresar" asp-for="Email" placeholder="Correo Electrónico"/>

            <input type="password" id="passwordIngresar" asp-for="Contrasena" placeholder="Contraseña" />
            <button type="submit" value="logIn">Ingresar</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>¡Bienvenido de nuevo!</h1>
                <p>Ingresa con tu cuenta</p>
                <button class="ghost" id="signIn">Ingresar</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>¡Hola!</h1>
                <p>Registrate para acceder a la página</p>
                <button class="ghost" id="signUp">Registrarse</button>
            </div>
        </div>
    </div>
</div>
<body>
    <script src="~/js/scriptSignIn.js"></script>
</body>
